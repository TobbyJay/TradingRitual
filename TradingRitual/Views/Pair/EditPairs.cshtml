    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="row">

                <!-- Pairs-->
                <div class="col-sm-12 col-lg-6">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Pairs</h5>
                            <div>
                                <form class="form-inline pairs-form">

                                    <div class="col-6 position-relative form-group">
                                        <label class="mr-sm-2" required>Base / Quote : </label>
                                        <input asp-for="Currencies" class="form-control" style="width: 100%;" required>
                                        <span asp-validation-for="Currencies" class="text-danger" style="font-size:smaller;"></span>
                                    </div>

                                    <button class="btn btn-primary mt-3 ml-3">Update</button>
