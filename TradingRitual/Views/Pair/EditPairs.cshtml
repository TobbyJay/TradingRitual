@section Scripts{

    <script>

        var currency = document.getElementById("Currencies");
      

        $('.pairs-form').submit(e => {

            e.preventDefault();
            var model = {
                Currencies: currency.value,
              
            }
            console.log(model);

            $.post("../EditPairs/@ViewBag.id", model, function (data, status) {
                console.log(data);
                console.log(status);
                swal("Congratulations!", "Your currency pair has been updated!", "success");
                //location.reload(true);
            });


        });
    </script>
}
