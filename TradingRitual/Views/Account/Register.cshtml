@model RegisterViewModel
@{

    ViewData["Title"] = "Registration Page";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <title>@ViewBag.Title</title>

    <meta name="description" content=">
    <meta name="msapplication-tap-highlight" content="no">
    <link href="~/UserDashboardStyle/css/style.css" rel="stylesheet" />

    <script src="~/UserDashboardStyle/lib/jquery/dist/jquery.js"></script>
    <script src="~/UserDashboardStyle/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/UserDashboardStyle/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>

<body>


    <div class="app-container app-theme-white body-tabs-shadow">
        <div class="app-container">
            <div class="h-100">
                <div class="h-100 no-gutters row">
                    <div class="h-100 d-flex bg-white justify-content-center align-items-center col-md-12 col-lg-8">
                        <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
                            <div class="app-logo"></div>
                            <h4>
                                <div>Hey There,</div>
                                <span>It only takes a <span class="text-success">few seconds</span> to create your account</span>
                            </h4>

                            <div class="divider row"></div>
                            <div asp-validation-summary="All" class="badge-danger" style="font-size:smaller;"></div>
                            <div>
                                <form class="" asp-action="register" asp-controller="account" method="post">
                                    <div class="form-row">
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label class="">Full Name</label>
                                                <input asp-for="FullName" class="form-control">
                                                <span asp-validation-for="FullName" class="text-danger" style="font-size:smaller;"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label class=""><span class="text-danger">*</span> Email</label>
                                                <input asp-for="Email" required class="form-control">
                                                <span asp-validation-for="Email" class="text-danger" style="font-size:smaller;"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label class=""><span class="text-danger">*</span> Password</label>
                                                <input asp-for="Password" required class="form-control">
                                                <span asp-validation-for="Password" class="text-danger" style="font-size:smaller;"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label class=""><span class="text-danger">*</span> Repeat Password</label>
                                                <input asp-for="RepeatPassword" required class="form-control">
                                                <span asp-validation-for="RepeatPassword" class="text-danger" style="font-size:smaller;"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="divider row"></div>
                                    <h6 class="mt-3">Already have an account?<a asp-action="login" asp-controller="account" class="text-primary">Sign in</a></h6>
                                    <div class="d-flex align-items-center">
                                        <div class="ml-auto">

                                            <button class="btn btn-primary btn-lg">Create Account</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/UserDashboardStyle/assets/scripts/main.d810cf0ae7f39f28f336.js"></script>
</body>

</html>


