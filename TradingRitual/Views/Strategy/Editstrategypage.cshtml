@model EdiStrategyViewModel


@{
    ViewData["Title"] = "Edit";
    Layout = "_NewLayout";
}



<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="fa fa-pen-alt text-success"></i>
                </div>
                <div class="ml-3">
                    EDIT STRATEGY
                    <div class="page-title-subheading">Haq haq haq haq haq haq</div>
                    <br />
                    <input hidden value="@ViewBag.id" />
                </div>
            </div>

        </div>
    </div>

    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="row">


                <!-- Strategy -->
                <div class="col-sm-12 col-lg-6">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Strategy</h5>
                            <div>
                                <form class="form-inline checklist-form edit-strategy-form">

                                    <div class="col-6 ml-1 position-relative form-group">
                                        <label for="exampleEmail22" class="mr-sm-2">Name: </label>
                                        <input asp-for="SimpleStrategyName" class="form-control" style="width: 100%;" required>
                                        <span asp-validation-for="SimpleStrategyName" class="text-danger" style="font-size:smaller;"></span>
                                    </div>

                                    <div class="col-6 ml-1 mt-2 position-relative form-group">
                                        <label for="exampleEmail22" class="mr-sm-5">Description:</label>
                                        <textarea asp-for="SimpleStrategyDescription" class="form-control" required></textarea>
                                        <span asp-validation-for="SimpleStrategyDescription" class="text-danger" style="font-size:smaller;"></span>
                                    </div>

                                    <div class="mt-2">
                                        <button type="submit" class="btn btn-primary mt-2 ml-3">Update</button>
                                        <a asp-controller="home" asp-action="edit" type="button" class="btn btn-success mt-2 ml-2">Go back</a>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
</div>

@section Scripts{

    <script>

        var strat = document.getElementById("SimpleStrategyName");
        var desc = document.getElementById("SimpleStrategyDescription");
        //$(document).ready(function () {

        //    alert("this loads");
        //    //$.get("GetStrategy", function (data, status) {

        //    //    console.log(status);
        //    //    //swal("Congratulations!", "Your trading time has been set!");
        //    //});
        //});

        $('.edit-strategy-form').submit(e => {

            e.preventDefault();
            var model = {
                SimpleStrategyName: strat.value,
                SimpleStrategyDescription: desc.value
            }
            console.log(model);

            $.post("../Editstrategypage/@ViewBag.id", model, function (data, status) {
                console.log(data);
                console.log(status);
                swal("Awesome!", "Your strategy has been updated successfully!", "success");
                //location.reload(true);
            });


        });
    </script>
}
