
@{
    Layout = "_NewLayout";
    ViewData["Title"] = "Form Page";

}
<form action="/" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Strategy</h5>
                    <div class="mt-5 collapse show" id="collapseExample123" style="">

                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">


                                    <div class="position-relative form-group">
                                        <label class="">What strategy is this trade based on?</label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>Strategy 1</option>
                                            <option>Strategy 2</option>
                                            <option>3 Strategy</option>
                                            <option>4 Strategy</option>
                                            <option>Firth Strategy </option>
                                        </select>
                                    </div>
                                    <div class="position-relative form-group">
                                        <label class="">Can you confirm this trade meets the minimum criteria of your strategy?</label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>Yes</option>
                                            <option>No</option>

                                        </select>
                                    </div>
                                    <div class="position-relative form-group">
                                        <label class="">What target/exit strategy are you using for this trade</label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>Strategy 1</option>
                                            <option>Strategy 2</option>
                                            <option>3 Strategy</option>
                                            <option>4 Strategy</option>
                                            <option>Firth Strategy </option>

                                        </select>
                                    </div>

                                    <div class="position-relative form-group">
                                        <label class="">Strategy checklist</label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>checklist 1</option>
                                            <option>checklist 2</option>
                                            <option>3 checklist</option>
                                            <option>4 checklist</option>
                                            <option>Firth checklist </option>

                                        </select>
                                    </div>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" data-toggle="collapse" href="#collapseExample123" class="btn btn-primary">Click to open/close</button>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Trade Form</h5>
                    <div class="mt-5 collapse show" id="collapseExample1" style="">

                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">

                                    <div class="position-relative form-group">
                                        <label class="">Are you trading with the trend? Try to avoid ranging markets</label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>Yes</option>
                                            <option>No</option>
                                        </select>
                                    </div>

                                    <div class="position-relative form-group">
                                        <label class="">Do you accept you can lose this trade and promise not to move your stop loss</label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>Yes</option>
                                            <option>No</option>
                                        </select>
                                    </div>

                                    <div class="position-relative form-group">
                                        <label class="">What is the risk to reward ration on this trade</label>
                                        <input class="form-control">
                                    </div>

                                    <div class="position-relative form-group">
                                        <label class="">Why this particular trade? (Describe and include screenshot link if possible)</label>
                                        <textarea name="text" id="exampleText" class="form-control"></textarea>
                                    </div>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" data-toggle="collapse" href="#collapseExample1" class="btn btn-primary">Click to open/close</button>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Pair Form</h5>
                    <div class="mt-5 collapse show" id="collapseExample12" style="">

                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">

                                    <div class="position-relative form-group">
                                        <label for="exampleEmail" class="">
                                            Which pair is this based on?
                                        </label>
                                        <input type="text" class="form-control">
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" data-toggle="collapse" href="#collapseExample12" class="btn btn-primary">Click to open/close</button>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Mental State Form</h5>
                    <div class="mt-5 collapse show" id="collapseExample1234" style="">

                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    <div class="position-relative form-group">
                                        <label for="exampleEmail" class="">What is your mental state</label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>Yes</option>
                                            <option>No</option>
                                        </select>
                                    </div>

                                    <div class="position-relative form-group">
                                        <label for="exampleEmail" class="">
                                            Have you already met your Daily Goal
                                        </label>
                                        <select name="select" class="form-control">
                                            <option selected disabled>Select an option</option>
                                            <option>Yes</option>
                                            <option>No</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" data-toggle="collapse" href="#collapseExample1234" class="btn btn-primary">Click to open/close</button>
                </div>
            </div>

        </div>
    </div>

</form>