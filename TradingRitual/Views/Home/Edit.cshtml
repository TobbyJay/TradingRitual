            e.preventDefault();
            var model = {
                StartTime: start.value,
                EndTime: end.value
            }
            console.log(model);

            $.post("PostTradingHours", model, function (data, status) {
                console.log(status);
              
                swal({
                    title: "It's about time!",
                    text: "Your trading time has been set!",
                    icon: "success",
                });
                location.reload(true);

            });


        });
        
     
