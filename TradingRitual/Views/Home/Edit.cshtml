                    title: "Done!",
                    text: "Your strategy has been deleted!",
                    icon: "success",
                });
                //location.reload(true);
            });
           

        });

            
       
        $('.exit-strategy-form').submit(e => {

            e.preventDefault();
            var model = {
                ExitStrategyName: exitStrategyName.value,
               ExitStrategyDescription: exitDesc.value
            }
            console.log(model);
            
            $.post("/Strategy/PostExitStrategy", model, function (data, status) {

                console.log(status);
              
                swal({
                    title: "Awesomme!",
