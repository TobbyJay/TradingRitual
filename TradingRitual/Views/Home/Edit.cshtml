                    icon: "success",
                });
                location.reload(true);
            });
           

        });


        $('.pairs-form').submit(e => {

            e.preventDefault();
            var model = {
                Base: base.value,
                Quote: quote.value
            }
            console.log(model);

            $.post("/Pair/PostPairs", model, function (data, status) {
                //console.log(data);
